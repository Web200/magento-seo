type Query {
    seoInfo: SeoData @resolver(class: "Web200\\Seo\\Model\\Resolver\\Seo")

    hreflangUrls(id: Int!, action: String!): [HreflangUrls!]
        @resolver(class: "Web200\\Seo\\Model\\Resolver\\Hreflang")

    organization(store_code: String!): OrganizationConfigurations
        @resolver(class: "Web200\\Seo\\Model\\Resolver\\Organization")

    metaRobots(id: Int!, action: String!): Robots
        @resolver(class: "Web200\\Seo\\Model\\Resolver\\MetaRobots")
}

type OrganizationConfigurations {
    name: String!
    email: String!
    phone: String!
    vatID: String!
    areaServed: String!
    availableLanguage: String!
    streetAddress: String!
    addressLocality: String!
    postalCode: String!
    addressRegion: String!
    addressCountry: String!
    alternateName: String!
}

type Robots {
    robots: String!
}

type SeoData @doc(description: "Seo Data Fields") {
    metaRobots: MetaRobotsConfigurations
    canonical: CanonicalConfigurations
    microData: MicroDataConfigurations
    siteMap: SiteMapConfigurations
    siteVerification: SiteVerificationConfigurations
    twitterCard: TwitterCardConfigurations
    hreflang: HreflangConfigurations
}

type HreflangUrls {
    locale: String!
    url: String!
}

type MetaRobotsConfigurations {
    isNoIndexActive: Boolean
    defaultRobots: String
}

type CanonicalConfigurations {
    isRelPagination: Boolean
    isCmsActive: Boolean
    isSimpleProductSitemap: Boolean
    isStorePreferenceEnable: Boolean
}

type MicroDataConfigurations {
    brand: String
    isActive: Boolean
}

type SiteMapConfigurations {
    isCategoryActive: Boolean
    categoryUrlKey: String
    maxDepth: Int
}

type SiteVerificationConfigurations {
    isActive: Boolean
    googleVerificationCode: String
    bingVerificationCode: String
    pintrestVerificationCode: String
    yandexVerificationCode: String
}

type TwitterCardConfigurations {
    isActive: Boolean
    defaultCardType: String
    defaultSiteUsername: String
    defaultCreator: String
}

type HreflangConfigurations {
    isActive: Boolean
    useSameWebsiteOnly: Boolean
    localeCode: String
}
